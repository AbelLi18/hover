@import 'reset.styl'
body
    color #333
    padding 40px 0 0 0
    font-family sans-serif
    line-height 140%
    background-color #ECEFF1
a
    text-decoration none
    color #37474f

.warp
    width 800px
    margin 0 auto
    padding 0 20px

a[class^="hvr_"]
    display inline-block
    vertical-align middle
    padding 16px 32px
    margin .4em
    cursor pointer
    border-radius 5px
    border 1px solid #37474f
    transform translateZ(0)
    box-shadow 0 0 1px rgba(0, 0, 0, 0)
    backface-visibility hidden //隐藏被旋转的元素的背面

a.hvr_grow ,a.hvr_shrink
    transition-duration .3s  //定义过渡效果花费的时间
    transition-property transform //规定应用过渡的 CSS 属性的名称
    
a.hvr_grow:hover
    transform scale(1.1) //放大 
     
a.hvr_shrink:hover
    transform scale(0.9) //缩小

a.hvr_pulse:hover
    animation-name hvr_pulse
    animation-duration 1s
    animation-iteration-count infinite //动画被播放的次数, infinite 动画应该无限次播放
@keyframes hvr_pulse
    25%  
        transform scale(1.1)
    75%  
        transform scale(0.9)
    
a.hvr_pulse_grow:hover
    animation-name hvr_pulse_grow
    animation-duration .3s
    animation-iteration-count infinite
    animation-direction alternate  //是否在下一周期逆向地播放, alternate 动画应该轮流反向播放。
@keyframes hvr_pulse_grow
    to
        transform scale(1.1)    
  
a.hvr_pulse_shrink:hover
    animation-name hvr_pulse_shrink
    animation-duration .3s
    animation-timing-function linear //动画的速度曲线, linear动画从头到尾的速度是相同的。
    animation-direction alternate 
    animation-iteration-count infinite
@keyframes hvr_pulse_shrink
    to
        transform scale(0.9)

a.hvr_push:hover
    animation-name hvr_push
    animation-duration .3s
    animation-timing-function linear
    animation-iteration-count 1 //动画播放次数的数值
@keyframes hvr_push
    50%
        transform scale(0.8) 
    100%
        transform scale(1)   
 
 a.hvr_pop:hover
     animation-name hvr_pop
     animation-duration .3s
     animation-timing-function linear
     animation-iteration-count 1
@keyframes hvr_pop
    50%
        transform scale(1.2) 

a.hvr_bounce_in
    transform translateZ(0)
    transition-duration 0.5s
a.hvr_bounce_in:hover
    transform scale(1.2)
    transition-timing-function cubic-bezier(0.47, 2.02, 0.31, -0.36)//在 cubic-bezier 函数中自己的值。可能的值是从 0 到 1 的数值
    
a.hvr_bounce_out
    transform translateZ(0)
    transition-duration .5s
a.hvr_bounce_out:hover
    transform scale(0.8)
    transition-timing-function cubic-bezier(0.47, 2.02, 0.31, -0.36)

a.hvr_rotate
    transform translateZ(0)
    transition-duration .3s
    transition-property transform
a.hvr_rotate:hover
    transform rotate(4deg) 
    
a.hvr_grow_rotate
    transform translateZ(0)
    transition-duration .3s
    transition-property transform
a.hvr_grow_rotate:hover
    transform scale(1.1) rotate(4deg) 
    
a.hvr_float
    transform translateZ(0)
    transition-property transform
    transition-duration .3s
    transition-timing-function ease-out //以慢速结束的过渡效果
a.hvr_float:hover
    transform translateY(-8px)